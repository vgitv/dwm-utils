#!/bin/bash
set -euo pipefail

flag="$1"

case "${flag}" in
    '-d'|'--down')
        amixer -q set Master 5%-
        pkill -RTMIN+3 dwmblocks
        ;;
    '-u'|'--up')
        amixer -q set Master 5%+
        pkill -RTMIN+3 dwmblocks
        ;;
    '-t'|'--toggle')
        amixer -q -D pulse set Master toggle
        pkill -RTMIN+3 dwmblocks
        ;;
    '-l'|'--list')
        notify-send "$(amixer get Master)"
        ;;
    *)
        echo 'Invalid option'
        ;;
esac
