#!/bin/bash
set -euo pipefail

# paquets requis :
# - hibernate
# - pm-utils

choice="$(echo -e 'lock\nexit-dwm\nhibernate\nshutdown\nreboot' | dmenu -b -p 'System')"

case "${choice}" in
    'l')
        notify-send 'Not implemented yet'
        ;;
    'e')
        notify-send 'Not implemented yet'
        ;;
    'h')
        sudo pm-hibernate
        ;;
    's')
        shutdown -P now
        ;;
    'r')
        shutdown -r now
        ;;
    *)
        echo 'Invalid choice'
        ;;
esac
